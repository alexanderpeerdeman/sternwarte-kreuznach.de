[
    {{- range $index, $page := .Site.RegularPages -}}
    {{- if gt $index 0 -}},{{ end}}
    {{- $entry := dict "href" $page.RelPermalink "title" $page.Title -}}
    {{- $entry = merge $entry (dict "content" ($page.Plain | htmlUnescape)) -}}
    {{- $speakers := $page.Params.talk_speakers -}}
    {{ if gt $speakers 0 -}}
    {{- $entry = merge $entry (dict "speakers" ($page.Params.talk_speakers)) -}}
    {{- end -}}
    {{- $entry | jsonify -}}
    {{- end -}}
]